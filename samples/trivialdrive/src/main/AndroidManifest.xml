<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.onepf.opfiab.trivialdrive"
    android:installLocation="auto">

    <application
        android:name="org.onepf.trivialdrive.TrivialApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name="org.onepf.trivialdrive.ui.activity.LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="org.onepf.trivialdrive.ui.activity.AdvancedHelperActivity"/>

        <activity
            android:name="org.onepf.trivialdrive.ui.activity.ActivityHelperActivity"/>

        <activity
            android:name="org.onepf.trivialdrive.ui.activity.FragmentHelperActivity"/>
    </application>
</manifest>
