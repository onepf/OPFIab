<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TableRow>

        <Button
            android:id="@+id/btn_buy_gas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_buy_gas" />

        <Space
            android:layout_width="@dimen/padding_normal"
            android:layout_height="wrap_content" />

        <org.onepf.trivialdrive.ui.view.SkuDetailsView
            android:id="@+id/sdv_gas"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </TableRow>

    <TableRow android:paddingTop="@dimen/padding_small">

        <Button
            android:id="@+id/btn_buy_premium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_buy_premium" />

        <Space
            android:layout_width="@dimen/padding_normal"
            android:layout_height="wrap_content" />

        <org.onepf.trivialdrive.ui.view.SkuDetailsView
            android:id="@+id/sdv_premium"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </TableRow>

    <TableRow android:paddingTop="@dimen/padding_small">

        <Button
            android:id="@+id/btn_buy_subscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_buy_subscription" />

        <Space
            android:layout_width="@dimen/padding_normal"
            android:layout_height="wrap_content" />

        <org.onepf.trivialdrive.ui.view.SkuDetailsView
            android:id="@+id/sdv_subscription"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </TableRow>

</TableLayout>